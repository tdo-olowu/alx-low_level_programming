# declaring all variables
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

# all depends on the named target
all: $(NAME)

# name depends on the list of object files
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

# each object file, if not available, will be constructed
# based on the following pattern
%.o : %.c
	$(CC) -c $< -o $@
